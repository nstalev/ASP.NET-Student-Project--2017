@model IEnumerable<ComputerStore.Models.ViewModels.Comments.CommentVm>

@{
    ViewBag.Title = "_AllCommentsPartial";
}

<div class="container">

    @foreach (var item in Model)
    {
        <div class="card col-12 thumbnail" style="width:450px; height:100px; border:1px solid; margin-top: 25px">
            <p>Коментар от: <strong>@Html.DisplayFor(modelItem => item.PersonName)</strong></p>
            <p>Дата: <strong>@Html.DisplayFor(modelItem => item.Date)</strong></p>


            <div class="pull-left">
                <p> @Html.DisplayFor(modelItem => item.Content)</p>

            </div>
        </div>

    }
</div>
